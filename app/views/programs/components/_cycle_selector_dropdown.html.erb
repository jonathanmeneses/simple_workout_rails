<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700 mb-2">Cycle</label>
  <%= form.select :cycle, options_for_select(@cycle_options, @selected_cycle_index), 
        { prompt: "Select Cycle" }, 
        { class: "flex-1 border border-gray-300 rounded-lg px-3 py-2", 
          onchange: "this.form.submit();" } %>
  <!-- Preserve other parameters -->
  <%= form.hidden_field :id, value: @selected_program_id %>
  <%= form.hidden_field :week, value: @selected_day_index %>
  <%= form.hidden_field :view_mode, value: @view_mode %>
<% end %>
</div>