<!-- Enhanced Exercise Details Display -->
<% effective_exercise = get_effective_exercise(workout_exercise, available_equipment) %>
<div class="exercise-details space-y-3">
  <!-- Additional exercise metadata -->
  <div class="exercise-metadata flex flex-wrap gap-2 text-xs">
    <!-- Movement pattern -->
    <span class="inline-flex items-center px-2 py-1 rounded-full bg-gray-100 text-gray-700">
      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <%= effective_exercise.movement_pattern.name.humanize %>
    </span>
    
    <!-- Exercise type with better styling -->
    <% if workout_exercise.main? %>
      <span class="inline-flex items-center px-2 py-1 rounded-full bg-blue-100 text-blue-800 font-medium">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Main Lift
      </span>
    <% else %>
      <span class="inline-flex items-center px-2 py-1 rounded-full bg-gray-100 text-gray-600">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0v-.5A1.5 1.5 0 0114.5 6c.526 0 .988-.27 1.256-.679a6.012 6.012 0 011.912 2.706A8.033 8.033 0 0118 10a8.033 8.033 0 01-.332 1.973 6.012 6.012 0 01-1.912 2.706C15.488 14.27 15.026 14 14.5 14A1.5 1.5 0 0013 12.5V12a2 2 0 00-4 0v.5A1.5 1.5 0 007.5 14c-.526 0-.988.27-1.256.679a6.012 6.012 0 01-1.912-2.706A8.033 8.033 0 014 10a8.033 8.033 0 01.332-1.973z" clip-rule="evenodd"/>
        </svg>
        Accessory
      </span>
    <% end %>
    
    <!-- Complexity level -->
    <% complexity_colors = {
      'beginner' => 'bg-green-100 text-green-700',
      'intermediate' => 'bg-yellow-100 text-yellow-700', 
      'advanced' => 'bg-red-100 text-red-700'
    } %>
    <span class="inline-flex items-center px-2 py-1 rounded-full <%= complexity_colors[effective_exercise.complexity_level] || 'bg-gray-100 text-gray-600' %>">
      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"/>
      </svg>
      <%= effective_exercise.complexity_level.humanize %>
    </span>
    
    <!-- Effectiveness score -->
    <% if effective_exercise.effectiveness_score >= 8 %>
      <span class="inline-flex items-center px-2 py-1 rounded-full bg-emerald-100 text-emerald-700">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        High Impact (<%= effective_exercise.effectiveness_score %>/10)
      </span>
    <% end %>
  </div>
  
  <!-- Primary muscle groups (if available) -->
  <% if effective_exercise.primary_muscles.present? %>
    <div class="primary-muscles">
      <div class="text-xs text-gray-600 mb-1">Primary muscles:</div>
      <div class="flex flex-wrap gap-1">
        <% effective_exercise.primary_muscles.first(4).each do |muscle| %>
          <span class="inline-block px-2 py-0.5 text-xs bg-blue-50 text-blue-700 rounded">
            <%= muscle.humanize %>
          </span>
        <% end %>
        <% if effective_exercise.primary_muscles.length > 4 %>
          <span class="inline-block px-2 py-0.5 text-xs bg-gray-50 text-gray-500 rounded">
            +<%= effective_exercise.primary_muscles.length - 4 %> more
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Exercise notes (if present and meaningful) -->
  <% if workout_exercise.notes.present? && !workout_exercise.notes.match(/^\d+/) %>
    <div class="exercise-notes">
      <div class="text-xs text-gray-600 italic">
        <%= workout_exercise.notes %>
      </div>
    </div>
  <% end %>
  
  <!-- Set type and training effects (if available) -->
  <% if effective_exercise.training_effects.present? %>
    <div class="training-effects">
      <div class="text-xs text-gray-600 mb-1">Training focus:</div>
      <div class="flex flex-wrap gap-1">
        <% effective_exercise.training_effects.first(3).each do |effect| %>
          <span class="inline-block px-2 py-0.5 text-xs bg-purple-50 text-purple-700 rounded">
            <%= effect.humanize %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>